
@{
    ViewBag.Title = "Index";
}


<div class="header page-header">
    <h1>Hei, hvor vil du reise? </h1>
</div>

<form>
    <div class="row">
        <div class="col-md-4">
            <label for="validationServer01">Reise fra?</label>
            <input type="text" class="form-control is-valid" id="validationServer01" placeholder="Hvor vil du reise ifra?" required>
        </div>
        <div class="col-md-4">
            <label for="validationServer02">Reise til?</label>
            <input type="text" class="form-control is-valid" id="validationServer02" placeholder="Hvor vil du dra?" required>
        </div>
        <select class="mdb-select md-form">
            <option selected>Hvor mange billetter vil du kjøpe?</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
        </select>
    </div>
    <button class="btn btn-primary" type="submit">Gå videre</button>
    <input type="button" class="btn btn-primary" typeof="submit" value="Gå videre(Må fikses)" onclick="@("window.location.href='" + @Url.Action("Kunde", "Home") + "'");" />
</form>


