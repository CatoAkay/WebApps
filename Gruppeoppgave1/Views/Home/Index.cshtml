@using Gruppeoppgave1.Models
@model Model.KundeReise


@{
    ViewBag.Title = "Index";
}

<script>
    $(document).ready(function () {
        $("#dato").datepicker({
            dateFormat: "dd-mm-yy",
            minDate: -0,
            maxDate: "+12M +0D"
        });
    });
</script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h1 class="hForside center-block"> Hei, hvor vil du reise?</h1>
    <div class="container-fluid">
        <div class="row">
            <div class="space ekstraPadding webflow-style-input form-group col-md-5">
                @Html.EditorFor(model => model.reise.Fra, new { htmlAttributes = new { @class = "stopInput fyll", type = "text", list = "fromSuggestions", name = "Fra", placeholder = "Fra" } })
                <datalist id="fromSuggestions">
                </datalist>
                @Html.ValidationMessageFor(model => model.reise.Fra, "", new { @class = "text-danger" })

            </div>
            <div class="space ekstraPadding webflow-style-input form-group col-md-5">
                @Html.EditorFor(model => model.reise.Til, new { htmlAttributes = new { @class = "stopInput fyll", type = "text", list = "toSuggestions", id = "til", name = "Til", placeholder = "Til" } })
                <datalist id="toSuggestions">
                </datalist>
                @Html.ValidationMessageFor(model => model.reise.Til, "", new { @class = "text-danger" })

            </div>
        </div>
        <div class="row">
            <div class="dropup space ekstraPadding webflow-style-input form-group col-md-5">
                @Html.EditorFor(model => model.reise.Dato, new { htmlAttributes = new { placeHolder = "Dato", autocomplete = "off", @class = "fyll", id = "dato", name = "Dato" } })
                @Html.ValidationMessageFor(model => model.reise.Dato, "", new { @class = "text-danger" })
            </div>
            <div class="space webflow-style-input form-group col-md-5">
                @Html.DropDownListFor(model => model.reise.Tid, new SelectList(Model.reiseTidene, "Value", "Text"), new { @class = "fyll select form-control", type = "time", id = "tid", name = "Tid" })
                @Html.ValidationMessageFor(model => model.reise.Tid, "", new { @class = "text-danger" })
            </div>
            <div class="row">
                <div class="col-lg-12">
                <button type="submit" class="knappIndex btn">Se avganger</button>
                </div>
            </div>
            
        </div>
    </div>

}

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>