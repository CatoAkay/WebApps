@model Model.Kunde

@{
    ViewBag.Title = "EditKunde";
    var ID = Session["idAdmin"].ToString();
    var navn = Session["AdminNavn"].ToString();
}


<h3 class="hAdmin2">Du er logget inn som: @navn <br>ID:@ID</h3>
<h1 class="hAdminReise">Endre kunde</h1>
<div class="borderStrekk2 form-horizontal">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    
        <div style="margin-top: 2em" class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)

            <div class="form-group">
                <div class="spaceAdminInfo webflow-style-input col-md-10">
                    <label class="biggerText">Fornavn</label>
                    @Html.EditorFor(model => model.Fornavn, new {htmlAttributes = new {@class = "biggerText"}})
                    @Html.ValidationMessageFor(model => model.Fornavn, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                <div class="spaceAdminInfo webflow-style-input col-md-10">
                    <label class="biggerText">Etternavn</label>
                    @Html.EditorFor(model => model.Etternavn, new {htmlAttributes = new {@class = "biggerText"}})
                    @Html.ValidationMessageFor(model => model.Etternavn, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                <div class="spaceAdminInfo webflow-style-input col-md-10">
                    <label class="biggerText">Email</label>
                    @Html.EditorFor(model => model.Email, new {htmlAttributes = new {@class = "biggerText"}})
                    @Html.ValidationMessageFor(model => model.Email, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                <div class="spaceAdminInfo webflow-style-input col-md-10">
                    <label class="biggerText">Telefon</label>
                    @Html.EditorFor(model => model.Telefon, new {htmlAttributes = new {@class = "biggerText"}})
                    @Html.ValidationMessageFor(model => model.Telefon, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <button type="submit" value="Save" class="AdminMenu tilbake btn">Lagre endringer</button>
                </div>
            </div>
        </div>
    }
</div>
    <button class="tilbake AdminMenu btn">@Html.ActionLink("Tilbake", "Admin", null, new {@class="AdminMenu ekstraPadding2"})</button>


<script src="~/Scripts/jquery-3.3.1.min.js"></script>
