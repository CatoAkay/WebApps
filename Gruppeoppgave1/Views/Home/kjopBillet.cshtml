﻿
@{
    ViewBag.Title = "kjopBillet";

}

<h2>Personopplysninger</h2>
<h4>Skriv inn nødvendig informasjon for kvittering på kjøp</h4>

<form action="/Home/info" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="email">Email</label>
            <input type="email" class="form-control" name="email" id="email" placeholder="Email">
            <label for="Fornavn">Fornavn</label>
            <input type="text" class="form-control" name="Fornavn" id="Fornavn" placeholder="Fornavn">
            <label for="Etternavn">Etternavn</label>
            <input type="text" class="form-control" name="Etternavn" id="Etternavn" placeholder="Etternavn">
            <label for="Tlf">Telefon</label>
            <input type="tel" class="form-control" name="Telefon" id="Tlf" placeholder="Tlf">
            @Html.Hidden("Fra", Request["Fra"])
            @Html.Hidden("til", Request["Til"])
            @Html.Hidden("dato", Request["Dato"])

        </div>
        <div class="col-lg-6">
            <br /><label>Dato:</label>
            @Request["Dato"]
            <br /><label>Fra:</label>
            @Request["Fra"]
            <label>Til:</label>
            @Request["Til"]
        </div>
        <div class="form-group col-md-6">
            <button type="submit" class="btn btn-primary">Kjøp Bilett</button>
        </div>
    </div>
</form>



